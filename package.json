{
  "name": "@wtk/parallel-tasks",
  "version": "0.0.1",
  "description": "Um framework TypeScript para execução paralela de tasks/verificações/rotinas usando decorators e boas práticas",
  "keywords": [
    "typescript",
    "parallel",
    "tasks",
    "decorators",
    "async",
    "concurrent",
    "framework",
    "validation",
    "batch-processing"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WTK-Desenvolvimento/parallel-tasks.git"
  },
  "bugs": {
    "url": "https://github.com/WTK-Desenvolvimento/parallel-tasks/issues"
  },
  "homepage": "https://github.com/WTK-Desenvolvimento/parallel-tasks#readme",
  "author": {
    "name": "Nicolas Woitchik",
    "email": "nicolas@woitchik.com.br",
    "url": "https://github.com/nicolaswoitchik"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist/",
    "dev": "ts-node sample/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepack": "npm run build",
    "size-limit": "npm run build && size-limit"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "size-limit": "^11.1.6",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "glob": "^10.4.5",
    "reflect-metadata": "^0.2.2"
  }
}