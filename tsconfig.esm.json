{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2020",
    "outDir": "./dist/esm",
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "**/*.d.ts"],
  "ts-node": {
    "esm": true
  }
}
